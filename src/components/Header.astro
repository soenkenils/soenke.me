<header class="fixed top-0 w-full bg-nordic-base/80 backdrop-blur-xl border-b border-nordic-border/30 z-50">
  <nav class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo/Name -->
      <a href="#hero" class="group flex items-center gap-3">
        <span class="w-2 h-2 rounded-full bg-nordic-amber group-hover:scale-125 transition-transform duration-300"></span>
        <span class="text-lg font-medium text-nordic-text tracking-tight">soenke<span class="text-nordic-muted">.me</span></span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-1">
        <a href="#about" class="nav-link relative text-nordic-muted hover:text-nordic-text transition-colors px-4 py-2 text-sm tracking-wide">
          About
          <span class="nav-indicator"></span>
        </a>
        <a href="#experience" class="nav-link relative text-nordic-muted hover:text-nordic-text transition-colors px-4 py-2 text-sm tracking-wide">
          Experience
          <span class="nav-indicator"></span>
        </a>
        <a href="#projects" class="nav-link relative text-nordic-muted hover:text-nordic-text transition-colors px-4 py-2 text-sm tracking-wide">
          Work
          <span class="nav-indicator"></span>
        </a>
        <a href="#contact" class="nav-link relative text-nordic-muted hover:text-nordic-text transition-colors px-4 py-2 text-sm tracking-wide">
          Contact
          <span class="nav-indicator"></span>
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden relative w-10 h-10 flex items-center justify-center text-nordic-muted hover:text-nordic-text transition-colors"
        aria-label="Toggle menu"
        aria-expanded="false"
      >
        <div class="hamburger-icon">
          <span></span>
          <span></span>
        </div>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="md:hidden overflow-hidden transition-all duration-500 ease-out max-h-0 opacity-0">
      <div class="pt-6 pb-4 space-y-1 border-t border-nordic-border/30 mt-4">
        <a href="#about" class="mobile-menu-link block text-nordic-muted hover:text-nordic-text transition-all duration-300 py-3 text-lg">
          About
        </a>
        <a href="#experience" class="mobile-menu-link block text-nordic-muted hover:text-nordic-text transition-all duration-300 py-3 text-lg">
          Experience
        </a>
        <a href="#projects" class="mobile-menu-link block text-nordic-muted hover:text-nordic-text transition-all duration-300 py-3 text-lg">
          Work
        </a>
        <a href="#contact" class="mobile-menu-link block text-nordic-muted hover:text-nordic-text transition-all duration-300 py-3 text-lg">
          Contact
        </a>
      </div>
    </div>
  </nav>
</header>

<style>
  /* Nav link indicator */
  .nav-indicator {
    position: absolute;
    bottom: 6px;
    left: 50%;
    transform: translateX(-50%) scaleX(0);
    width: 4px;
    height: 4px;
    border-radius: 50%;
    background-color: #d4a853;
    transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .nav-link:hover .nav-indicator,
  .nav-link.active .nav-indicator {
    transform: translateX(-50%) scaleX(1);
  }

  .nav-link.active {
    color: #e8e6e3;
  }

  /* Hamburger icon */
  .hamburger-icon {
    width: 20px;
    height: 14px;
    position: relative;
  }

  .hamburger-icon span {
    position: absolute;
    left: 0;
    width: 100%;
    height: 1.5px;
    background-color: currentColor;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .hamburger-icon span:first-child {
    top: 0;
  }

  .hamburger-icon span:last-child {
    bottom: 0;
  }

  /* Open state */
  .hamburger-open .hamburger-icon span:first-child {
    top: 50%;
    transform: translateY(-50%) rotate(45deg);
  }

  .hamburger-open .hamburger-icon span:last-child {
    bottom: 50%;
    transform: translateY(50%) rotate(-45deg);
  }

  /* Mobile menu link hover */
  .mobile-menu-link {
    position: relative;
    padding-left: 0;
    transition: padding-left 0.3s ease;
  }

  .mobile-menu-link:hover {
    padding-left: 1rem;
    color: #d4a853;
  }

  .mobile-menu-link::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 0;
    height: 1px;
    background-color: #d4a853;
    transition: width 0.3s ease;
  }

  .mobile-menu-link:hover::before {
    width: 0.5rem;
  }
</style>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuLinks = document.querySelectorAll('.mobile-menu-link');
  const navLinks = document.querySelectorAll('.nav-link');

  // Mobile menu toggle
  if (menuButton && mobileMenu) {
    let isOpen = false;

    menuButton.addEventListener('click', () => {
      isOpen = !isOpen;

      if (isOpen) {
        mobileMenu.style.maxHeight = mobileMenu.scrollHeight + 'px';
        mobileMenu.style.opacity = '1';
        menuButton.classList.add('hamburger-open');
        menuButton.setAttribute('aria-expanded', 'true');
      } else {
        mobileMenu.style.maxHeight = '0';
        mobileMenu.style.opacity = '0';
        menuButton.classList.remove('hamburger-open');
        menuButton.setAttribute('aria-expanded', 'false');
      }
    });

    // Close menu when a link is clicked
    menuLinks.forEach(link => {
      link.addEventListener('click', () => {
        isOpen = false;
        mobileMenu.style.maxHeight = '0';
        mobileMenu.style.opacity = '0';
        menuButton.classList.remove('hamburger-open');
        menuButton.setAttribute('aria-expanded', 'false');
      });
    });
  }

  // Active section highlighting on scroll
  const sections = document.querySelectorAll('section[id]');

  function highlightActiveSection() {
    const scrollY = window.pageYOffset;

    sections.forEach(section => {
      const sectionHeight = section.offsetHeight;
      const sectionTop = section.offsetTop - 100;
      const sectionId = section.getAttribute('id');

      if (scrollY > sectionTop && scrollY <= sectionTop + sectionHeight) {
        navLinks.forEach(link => {
          link.classList.remove('active');
          if (link.getAttribute('href') === `#${sectionId}`) {
            link.classList.add('active');
          }
        });
      }
    });
  }

  window.addEventListener('scroll', highlightActiveSection);
  window.addEventListener('load', highlightActiveSection);
</script>
