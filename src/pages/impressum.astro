---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Impressum - Sönke Nommensen">
  <Header />
  <main>
    <section class="py-24 md:py-32 bg-nordic-base min-h-screen relative overflow-hidden grain-overlay">
      <div class="container mx-auto px-6 relative z-10">
        <div class="max-w-3xl mx-auto">
          <!-- Header -->
          <div class="mb-12">
            <a href="/" class="inline-flex items-center gap-2 text-nordic-muted hover:text-nordic-amber transition-colors mb-8 group">
              <svg class="w-4 h-4 transition-transform group-hover:-translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18"></path>
              </svg>
              <span class="text-sm">Zurück</span>
            </a>
            <h1 class="text-4xl md:text-5xl font-serif italic text-nordic-text">Impressum</h1>
          </div>

          <!-- Content card -->
          <div class="bg-nordic-card border border-nordic-border/50 rounded-xl p-8 md:p-10">
            <p class="text-sm text-nordic-muted uppercase tracking-widest mb-6">Angaben gemäß § 5 TMG</p>

            <div class="space-y-1 text-nordic-text-secondary leading-relaxed">
              <p>Sönke Nommensen</p>
              <p>Herderplatz 5a</p>
              <p>23564 Lübeck</p>
              <p class="pt-4">
                <a href="mailto:hi@soenke.me" class="text-nordic-sky hover:text-nordic-amber transition-colors link-underline">hi@soenke.me</a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
